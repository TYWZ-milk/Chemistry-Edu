                <li><a class="bh" href="#">&nbsp;</a></li>
                <li><a class="db" href="#">&nbsp;</a></li>
            </ul>

        </aside>



        <!--CONTENT-->
        <section id="content">
            <!--header-->
            <header>

                <h2>更改课程 <span> - 选择任一课程进行更改</span></h2>

            </header>
            <!--BLOG-->
            <section id="blog" class="clearfix">

                <!--blog content-->
                <div class="blog-content column" style="height: 600px;">

                    <div id="comment-form">
                        <table id="table" class="display">
                            <thead>
                                <tr>
                                    <th>课程序号</th>
                                    <th>课程名称</th>
                                    <th>必修/选修</th>
                                    <th>考试/考查</th>
                                    <th>教师</th>
                                    <th>课程教材</th>
                                    <th>上课安排</th>
                                    <th>课程选择</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ViewBag.userHome)
                                {
                                    <tr>

                                        <td name="classID">@item.ClassID</td>
                                        <td>@item.ClassName</td>
                                        <td>@item.RS</td>
                                        <td>@item.TE</td>
                                        <td>@item.Teacher</td>
                                        <td>@item.Textbook</td>
                                        <td>@item.Time</td>
                                        <td>选择该课程</td>
                                       
                                    </tr>
                                }
                                </tbody>
                        </table>

                    </div>
                </div>

            </section>
        </section>

    </div>
    <script>
        $(document).ready(function () {
            $('#table').DataTable({
