                "columnDefs": [{
                    // 定义操作列,######以下是重点########
                    "targets": 7,//操作按钮目标列
                    "data": null,
                    "render": function (data, type, row) {
                        var id = '"' + row.id + '"';
                        var html = "<a href='Class?classID="+data[0]+"'  class='delete btn btn-default btn-xs'  ><i class='fa fa-times'></i> 选择该课程</a>"
                        return html;
                    }
                }],
                "bProcessing": true,
                "bPaginage": true,
                "sPaginationType": "full_numbers",
