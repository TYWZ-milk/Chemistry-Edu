<body>

    <div class="container clearfix">

        <!--sidebars-->
        <aside id="sidebars">

            <!--logo-->
            <div class="commentAvatarDiv"><img class="commentAvatarImage" src="@ViewBag.head"></div>

            <!--main-menu-->
            <nav class="main-nav">
                <ul>
                    <li><a href="../Index/Index">首页</a></li>
                    <li class="active"><a href="Class">课程信息</a></li>
                    <li><a href="../Calendar/Calendar">课程安排</a></li>
